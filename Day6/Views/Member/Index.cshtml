@{
    ViewData["Title"] = "Index";
}

<div class="table-control">
    <a href="@Url.Action("CreatePeople","Member")" class="btn btn-dark px-5">Create</a>
    <table class="table table-striped table-bordered table-hover mt-1">
        <thead>
            <tr class="thead-dark">
                <th>First Name </th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date Of Bith</th>
                <th>Bith Place</th>
                <th>Phone Number</th>
                <th>Granduated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Gender</td>
                    <td>@item.DateOfBirth</td>
                    <td>@item.BirthPlace</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.IsGranduated</td>
                    <td class="button-w">
                        <a class="btn btn-dark ml-2"
                        href="@Url.Action("UpdatePeople","Member", new {id = @item.id})">Edit</a>
                        <a class="btn btn-danger ml-2"
                        href="@Url.Action("DeletePeople","Member",new {id = @item.id})">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
